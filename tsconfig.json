{
  "compilerOptions": {
    "lib": ["es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["theme/*"],
      "@components/*": ["theme/components/*"],
      "@assets/*": ["theme/public/*"]
    }
  }
}
